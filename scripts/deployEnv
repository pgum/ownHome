#!/bin/bash
repoPath=$(readlink -f "$0")
repoPath=${repoPath%/*/*}

backupFlags="--backup --backup-dir=${repoPath}/backups/$(date +%Y-%m-%d-%H%M)"
excludeFlag="--exclude=README.md"
src="$repoPath/dot/"
dest="$HOME"

rsync -navr $backupFlags $excludeFlag $src $dest #n = DRY RUN
#rsync -avr $backupFlags $excludeFlag $src $dest

