# vim: syntax=sh

installGNUScreenWithVerticalSplit(){
  local screenVer="screen-4.2.1"
  wget http://ftp.gnu.org/gnu/screen/${screenVer}.tar.gz -O ~/
  tar -xf ~/${screenVer}.tar.gz && rm ~/${screenVer}
  pushd ~/${screenVer}
  autoreconf
  ./configure --enable-colors256 && make && mv screen ~/bin/
  popd && rm -rf ~/${screenVer}
}

